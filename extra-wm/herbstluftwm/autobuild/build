expport CFLAGS+="${CFLAGS}" CXXFLAGS+="${CXXFLAGS}" LDXXFLAGS+="${LDFLAGS}" \
        LDFLAGS+="${LDFLAGS}" CPPFLAGS+="${CPPFLAGS}"
make PREFIX=/usr VERBOSE=
make info
make install DESTDIR="$PKGDIR" PREFIX=/usr ZSHCOMPLETIONDIR=/usr/share/zsh/site-functions

mkdir -p "$PKGDIR"/usr/share/bash-completion/completions
mv "$PKGDIR"/etc/bash_completion.d/herbstclient-completion \
   "$PKGDIR"/usr/share/bash-completion/completions/herbstclient
rm -r "$PKGDIR"/etc/bash_completion.d
