PKGNAME=windowmaker
PKGSEC=x11
PKGDEP="giflib libpng libtiff pango x11-lib"
PKGDES="a X11 window manager with NEXTSTEP look and feel"

AUTOTOOLS_AFTER="--enable-xinerama \
                 --localedir=/usr/share/locale --with-gnustepdir=/usr/lib/GNUstep \
                 --enable-usermenu --enable-modelock --enable-xrandr \
                 --enable-pango"
ABSHADOW=no
