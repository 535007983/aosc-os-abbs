# building these board firmware binaries require external FPGA SDKs, the SDKs are not publicly available
wget "https://www.nuand.com/fx3/bladeRF_fw_v2.0.0.img"
wget "https://www.nuand.com/fx3/bladeRF_fw_v2.0.0.img.sha256sum"
wget "https://nuand.com/fpga/v0.6.0/hostedx40.rbf"
wget "https://nuand.com/fpga/v0.6.0/hostedx40.rbf.sha256sum"
wget "https://nuand.com/fpga/v0.6.0/hostedx115.rbf"
wget "https://nuand.com/fpga/v0.6.0/hostedx115.rbf.sha256sum"
( sha256sum -c bladeRF_fw_v2.0.0.img.sha256sum && sha256sum -c hostedx40.rbf.sha256sum && sha256sum -c hostedx115.rbf.sha256sum  ) || ( echo "Bad file downloaded" && exit 1 )
