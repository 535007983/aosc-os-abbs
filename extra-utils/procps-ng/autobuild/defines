PKGNAME=procps-ng
PKGDES="Utilities for monitoring your system and its processes"
PKGDEP="ncurses systemd"
PKGCONFL="procps"
PKGSEC=util
BUILDDEP="systemd"

AUTOTOOLS_AFTER="--prefix=/usr \
    --exec-prefix=/ \
    --sysconfdir=/etc \
    --libdir=/usr/lib \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --enable-watch8bit \
    --with-systemd \
    --disable-modern-top \
    --disable-kill"
