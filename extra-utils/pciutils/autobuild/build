make OPT="${CFLAGS} -fPIC -DPIC" ZLIB=no SHARED=no PREFIX=/usr SHAREDIR=/usr/share/hwdata MANDIR=/usr/share/man SBINDIR=/usr/bin lib/libpci.a
cp lib/libpci.a libpci.a
make clean
make OPT="${CFLAGS}" ZLIB=no SHARED=yes PREFIX=/usr SBINDIR=/usr/sbin SHAREDIR=/usr/share/hwdata MANDIR=/usr/share/man all

make SHARED=yes PREFIX=/usr SBINDIR=/usr/sbin SHAREDIR=/usr/share/hwdata MANDIR=/usr/share/man DESTDIR=$PKGDIR install install-lib

rm -rf $PKGDIR/usr/{sbin/update-pciids,share/{man/man8/update-pciids.8,hwdata}}
