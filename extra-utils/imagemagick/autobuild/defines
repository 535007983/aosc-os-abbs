PKGNAME=imagemagick
PKGSEC=utils
PKGDEP="libtool lcms2 fontconfig ghostscript openexr libwmf librsvg libxml2 liblqr \
        openjpeg perl libxml2 libwebp djvulibre"
[ "${CROSS:-ARCH}" = "amd64" ] && PKGDEP+=" libcl"
[ "${CROSS:-ARCH}" = "amd64" ] && BUILDDEP+=" opencl-registry-api"
PKGDES="An image viewing and manipulation program"

ABSHADOW=no
AUTOTOOLS_AFTER="--with-modules \
                 --enable-hdri --with-wmf --with-openexr --with-xml --with-lcms2 \
                 --with-webp --with-gslib --with-gs-font-dir=/usr/share/fonts/Type1 \
                 --with-perl --with-lqr --with-rsvg \
                 --with-openjp2 --without-gvc --with-djvu --without-autotrace \
                 --without-jbig --without-fpx --without-dps --without-fftw LIBS=-ldl"
[ "${CROSS:-ARCH}" = "amd64" ] && AUTOTOOLS_AFTER+=" --enable-opencl"
NOLIBTOOL=no

AB_FLAGS_PIE=0
