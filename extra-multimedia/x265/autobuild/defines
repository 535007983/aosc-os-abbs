PKGNAME=x265
PKGSEC=libs
PKGDEP="glibc"
PKGDES="Open source H265/HEVC video encoder"

if [[ "${ARCH}" == "amd64" ]]; then
    BUILDDEP="yasm"
fi

PKGBREAK="avidemux<=2.7.0 ffmpeg<=3.4.2-1 gst-plugins-bad-1-0<=1.12.4 \
          handbrake<=1.0.7-2 vlc<=3.0.1 xpra<=2.0-2"

AB_FLAGS_O3=1

if [[ "${CROSS:-$ARCH}" = "ppc64" ]]; then
    CMAKE_AFTER="-DENABLE_ALTIVEC=OFF"
fi
