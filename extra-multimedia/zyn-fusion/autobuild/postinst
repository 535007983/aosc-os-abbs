echo "Correcting symlinks for Zyn Fusion..."
[[ -d /usr/lib/lv2/ZynAddSubFX.lv2 ]] && ( rm -rf /usr/lib/lv2/ZynAddSubFX.lv2; ln -s /opt/zyn-fusion/ZynAddSubFX.lv2/ /usr/lib/lv2/ )
[[ -d /usr/lib/lv2/ZynAddSubFX.lv2presets ]] && ( rm -rf /usr/lib/lv2/ZynAddSubFX.lv2presets; ln -s /opt/zyn-fusion/ZynAddSubFX.lv2presets/ /usr/lib/lv2/ )
[[ -d /usr/share/zynaddsubfx/banks ]] && ( rm -rf /usr/share/zynaddsubfx/banks; ln -s /opt/zyn-fusion/banks /usr/share/zynaddsubfx/banks )
