./configure ${AUTOTOOLS_DEF} \
    --enable-clock \
    --enable-outputs \
    --enable-unicode \
    --enable-visualizer \
    --with-curl \
    --with-fftw \
    --with-taglib
make
make -C extras

make install DESTDIR="$PKGDIR"
install -Dm755 extras/artist_to_albumartist \
               "$PKGDIR"/usr/bin/artist_to_albumartist
