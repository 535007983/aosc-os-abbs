PKGNAME=libass
PKGDES="Library for SSA/ASS subtitles rendering"
PKGSEC=libs
PKGDEP="enca fontconfig fribidi"
if [[ "${CROSS:-$ARCH}" = "amd64" ]]; then
    BUILDDEP="yasm"
fi

