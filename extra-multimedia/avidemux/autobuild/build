unset CFLAGS LDFLAGS CXXFLAGS CPPFLAGS
bash bootStrap.bash --tgz --prefix=/usr --with-system-libass --with-system-liba52 --with-system-libmad --with-system-libmp4v2
mkdir -p "$PKGDIR"
TARBALLS="$PWD"/debs
pushd "$PKGDIR"
for i in "$TARBALLS"/*.tar.*
do
	tar xvf $i --strip-components=1
done
popd

mkdir -p "$PKGDIR"/usr/share/pixmaps
cp appImage/avidemux.png "$PKGDIR"/usr/share/pixmaps
