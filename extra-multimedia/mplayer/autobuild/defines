PKGNAME=mplayer
PKGEPOCH=1
PKGDES="A cross-platform multimedia player"
PKGSEC=video
PKGDEP="a52dec aalib desktop-file-utils enca faac faad2 fontconfig fribidi gnutls gsm jack \
        lame libass libbluray libcaca libcdio-paranoia libdca libdvdnav libmad libmng libtheora \
        libvdpau libvpx mesa mpg123 opencore-amr opus pulseaudio rtmpdump schroedinger \
        samba sdl v4l-utils x264 xvidcore"
[ "${CROSS:-$ARCH}" = "amd64" ] && PKGDEP+=" lirc"
[ "${CROSS:-$ARCH}" = "amd64" ] && BUILDDEP+=" yasm"

AUTOTOOLS_AFTER="--prefix=/usr \
                 --disable-gui \
                 --disable-arts \
                 --enable-liblzo \
                 --enable-speex \
                 --enable-openal \
                 --enable-libdv \
                 --disable-musepack \
                 --disable-esd \
                 --disable-mga \
                 --disable-ass-internal \
                 --enable-cdparanoia \
                 --enable-xvmc \
                 --enable-radio \
                 --enable-radio-capture \
                 --enable-smb \
                 --language=all \
                 --confdir=/etc/mplayer"
[ "${CROSS:-$ARCH}" = "amd64" ] && AUTOTOOLS_AFTER+=" --enable-runtime-cpudetection"
ABSHADOW=no
