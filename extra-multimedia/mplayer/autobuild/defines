PKGNAME=mplayer
PKGEPOCH=1
PKGDES="A multimedia player"
PKGSEC=video
PKGDEP="a52dec aalib desktop-file-utils enca faac faad2 fontconfig fribidi gnutls gsm jack lame libass libbluray libcaca libcdio-paranoia libdca libdv libdvdnav libmad libtheora libvdpau libvpx lirc mesa mozjpeg mpg123 opencore-amr opus pulseaudio rtmpdump samba schroedinger sdl speex x264 xvidcore"
BUILDDEP="yasm"

# FIXME: does not build with openal enabled.
AUTOTOOLS_AFTER="--prefix=/usr \
                 --enable-runtime-cpudetection \
                 --disable-gui \
                 --disable-arts \
                 --enable-liblzo \
                 --enable-speex \
                 --disable-openal \
                 --enable-libdv \
                 --disable-musepack \
                 --disable-esd \
                 --disable-mga \
                 --disable-ass-internal \
                 --enable-cdparanoia \
                 --enable-xvmc \
                 --enable-radio \
                 --enable-radio-capture \
                 --enable-smb \
                 --language=all \
                 --confdir=/etc/mplayer"
ABSHADOW=no
