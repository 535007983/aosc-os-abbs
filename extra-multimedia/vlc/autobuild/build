sed -i -e 's:truetype/freefont::g' modules/text_renderer/freetype.c
sed -i -e 's:truetype/ttf-dejavu::g' modules/visualization/projectm.cpp

export QT_SELECT=5

CFLAGS+=" -I/usr/include/samba-4.0" CPPFLAGS+=" -I/usr/include/samba-4.0" \
CXXFLAGS+=" -std=gnu++11" ./configure ${AUTOTOOLS_DEF} \
            --enable-faad \
            --enable-nls \
            --enable-lirc \
            --enable-realrtsp \
            --enable-aa \
            --enable-vcdx \
            --enable-upnp \
            --enable-opus \
            --enable-sftp \
            --enable-crystalhd \
            --disable-freerdp \
            --disable-xvideo \
            --enable-gles2 \
            --enable-gles1 \
            --disable-opencv ${ALTIVEC} \
            LUAC=/usr/bin/luac LUA_LIBS="`pkg-config --libs lua`" \
            RCC=/usr/lib/qt5/bin/rcc MOC=/usr/lib/qt5/bin/moc \
            UIC=/usr/lib/qt5/bin/uic

make
make install DESTDIR=$PKGDIR

for res in 16 32 48 128; do
  install -D -m644 "share/icons/${res}x${res}/vlc.png" \
                   "abdist/usr/share/icons/hicolor/${res}x${res}/apps/vlc.png"
done
