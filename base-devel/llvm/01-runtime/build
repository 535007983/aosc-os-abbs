mkdir build
cd build
cmake .. ${CMAKE_DEF} ${CMAKE_AFTER}

make
make ocaml_doc

make install DESTDIR=$SRCDIR/fakeroot

install -d $PKGDIR/usr/lib
cp -P \
    $SRCDIR/fakeroot/usr/lib/libLLVM-$PKGVER.so \
    $SRCDIR/fakeroot/usr/lib/libLLVM-${PKGVER%.*}.so \
    $SRCDIR/fakeroot/usr/lib/{LLVMgold,libLTO,BugpointPasses}.so \
    $PKGDIR/usr/lib/

