PKGNAME=mesa
PKGDES="MesaLib - a OpenGL implentation"
PKGDEP="llvm-runtime x11-lib libdrm expat wayland systemd elfutils libvdpau s2tc libgcrypt"
BUILDDEP="x11-proto mako systemd"
PKGSEC=x11

ABSHADOW=no
AUTOTOOLS_AFTER="--with-dri-driverdir=/usr/lib/xorg/modules/dri \
                 --with-egl-platforms=x11,drm,wayland \
                 --with-sha1=libgcrypt \
                 --enable-llvm-shared-libs \
                 --enable-egl \
                 --enable-gbm \
                 --enable-gallium-llvm \
                 --enable-shared-glapi \
                 --enable-glx \
                 --enable-glx-tls \
                 --enable-dri \
                 --enable-dri3 \
                 --enable-osmesa \
                 --enable-gles1 \
                 --enable-gles2 \
                 --enable-texture-float \
                 --enable-xa \
                 --enable-vdpau \
                 --with-clang-libdir=/usr/lib"
RECONF=no
