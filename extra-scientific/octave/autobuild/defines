PKGNAME=octave
PKGSEC=math
PKGDEP="arpack-ng curl fftw fltk ghostscript glpk glu gnuplot graphicsmagick hdf5 \
        libsndfile qhull qscintilla suitesparse texinfo"
BUILDDEP="texlive"
PKGDES="A high-level language intended for numerical computations"

AUTOTOOLS_AFTER="--libexecdir=/usr/lib \
                 --with-quantum-depth=16 \
                 --with-qrupdate \
                 --with-amd --with-colamd --with-ccolamd --with-cholmod \
                 --with-cxsparse \
                 --disable-jit \
                 --disable-java \
                 MOC=/usr/lib/qt4/bin/moc UIC=/usr/lib/qt4/bin/uic"
DISTVER="AOSC OS $PKGVER"
ABMK="${DISTVER}"

RECONF=no
