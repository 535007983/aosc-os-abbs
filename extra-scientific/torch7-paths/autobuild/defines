PKGNAME=torch7-paths
PKGSEC=science
PKGDEP="luajit"
BUILDDEP="cmake"
PKGDES="File name manipulation module for Torch7"

PKGPROV="torch-paths luajit-paths"
CMAKE_AFTER="-DLUADIR=/usr/share/lua/5.1 \
             -DLIBDIR=/usr/lib/lua/5.1 \
             -DLUALIB=/usr/lib/libluajit-5.1.so \
             -DLUA_INCDIR=/usr/include/luajit-2.1 \
             -DLUA_LIBDIR=/usr/lib"
