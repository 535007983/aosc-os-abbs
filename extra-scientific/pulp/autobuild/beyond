rm -rv "$PKGDIR"/usr/lib/python3.6/site-packages/pulp/solverdir/cbc/*
rm -rv "$PKGDIR"/usr/lib/python2.7/site-packages/pulp/solverdir/cbc/*

if [[ "${CROSS:-$ARCH}" = *64* ]]; then
    mkdir -p "$PKGDIR"/usr/lib/python3.6/site-packages/pulp/solverdir/cbc/linux/64/
    ln -sv /usr/bin/cbc "$PKGDIR"/usr/lib/python3.6/site-packages/pulp/solverdir/cbc/linux/64/cbc
    mkdir -p "$PKGDIR"/usr/lib/python2.7/site-packages/pulp/solverdir/cbc/linux/64/
    ln -sv /usr/bin/cbc "$PKGDIR"/usr/lib/python2.7/site-packages/pulp/solverdir/cbc/linux/64/cbc
else
    mkdir -p "$PKGDIR"/usr/lib/python3.6/site-packages/pulp/solverdir/cbc/linux/32/
    ln -sv /usr/bin/cbc "$PKGDIR"/usr/lib/python3.6/site-packages/pulp/solverdir/cbc/linux/32/cbc
    mkdir -p "$PKGDIR"/usr/lib/python2.7/site-packages/pulp/solverdir/cbc/linux/32/
    ln -sv /usr/bin/cbc "$PKGDIR"/usr/lib/python2.7/site-packages/pulp/solverdir/cbc/linux/32/cbc
fi
