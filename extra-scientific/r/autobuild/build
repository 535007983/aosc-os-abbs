./configure --prefix=/usr
            --libdir=/usr/lib \
            --sysconfdir=/etc/R \
            --datarootdir=/usr/share \
            --rsharedir=/usr/share/R/ \
            --rincludedir=/usr/include/R/ \
            --rdocdir=/usr/share/doc/R/ \
            --with-x \
            --enable-R-shlib \
            --with-lapack \
            --with-blas \
            F77=gfortran \
            LIBnn=lib
make
make install DESTDIR=$PKGDIR

pushd src/nmath/standalone

make shared
make install DESTDIR=$PKGDIR
