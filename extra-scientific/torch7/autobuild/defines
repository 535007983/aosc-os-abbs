PKGNAME=torch7
PKGSEC=science
PKGDEP="cwrap lapack torch7-paths"
BUILDDEP="cmake"
PKGDES="A scientific computing framework for LuaJIT"

CMAKE_AFTER="-DLUADIR=/usr/share/lua/5.1 \
             -DLIBDIR=/usr/lib/lua/5.1 \
             -DLUA_BINDIR=/usr/bin \
             -DLUA_INCDIR=/usr/include/luajit-2.1 \
             -DLUA_LIBDIR=/usr/lib \
             -DLUALIB=/usr/lib/libluajit-5.1.so \
             -DLUA=/usr/bin/luajit"
AB_FLAGS_O3=1
