PKGNAME=libdrm
PKGDES="Direct Rendering Manager runtime library"
PKGDEP="x11-lib"
PKGSEC=libs

AUTOTOOLS_AFTER="--enable-udev"
[ "${CROSS:-$ARCH}" = arm* ] && \
AUTOTOOLS_AFTER+="\
                  --enable-exynos-experimental-api \
                  --enable-omap-experimental-api \
                  --enable-tegra-experimental-api \
                  --enable-vc4" || :
RECONF=no
