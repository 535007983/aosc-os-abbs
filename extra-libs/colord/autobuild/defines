PKGNAME=colord
PKGDES="System daemon for managing color devices"
PKGSEC=admin
PKGDEP="lcms2 libgusb polkit sqlite systemd dconf dbus sane-backends"
BUILDDEP="bash-completion gtk-doc intltool"
AUTOTOOLS_AFTER="--enable-vala --with-systemdsystemunitdir=/usr/lib/systemd/system \
                 --enable-sane --with-daemon-user=colord --enable-print-profiles \
                 --enable-reverse --disable-argyllcms-sensor --enable-gtk-doc"

