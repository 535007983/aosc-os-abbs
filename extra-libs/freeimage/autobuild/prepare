if [[ "${CROSS:-$ARCH}" = "armel" ]]; then
    export CFLAGS="${CFLAGS} -fPIC"
    export CXXFLAGS="${CXXFLAGS} -fPIC"
    export LDFLAGS="${LDFLAGS} -fPIC"
fi

if [[ "${CROSS:-$ARCH}" = "powerpc" ]]; then
    export CFLAGS="${CFLAGS/-msecure-plt/}"
    export CXXFLAGS="${CXXFLAGS/-msecure-plt/}"
fi
