if [[ "${CROSS:-$ARCH}" = "amd64" ]]; then
  DNCRID="linux-x64"
fi
if [[ "${CROSS:-$ARCH}" = "arm64" ]]; then
  DNCRID="linux-arm64"
fi
if [[ "${CROSS:-$ARCH}" = "armel" ]]; then
  DNCRID="linux-arm"
fi
abinfo "RID is $DNCRID"

abinfo "Download pre-built binaries"
wget "https://dotnetcli.azureedge.net/dotnet/Runtime/$PKGVER/dotnet-runtime-$PKGVER-$DNCRID.tar.gz"
tar -xf "dotnet-runtime-$PKGVER-$DNCRID.tar.gz" -C "$SRCDIR"

abinfo "Deploy files"
mkdir -p "$PKGDIR"/usr/bin
mkdir -p "$PKGDIR"/usr/lib/dotnet
mkdir -p "$PKGDIR"/usr/share/doc/dotnet
cp "$SRCDIR"/dotnet "$PKGDIR"/usr/lib/dotnet
cp "$SRCDIR"/LICENSE.txt "$PKGDIR"/usr/share/doc/dotnet
cp "$SRCDIR"/ThirdPartyNotices.txt "$PKGDIR"/usr/share/doc/dotnet
# cp dotnet.1.gz "$PKGDIR"/usr/share/man/man1
ln -s /usr/lib/dotnet/dotnet "$PKGDIR"/usr/bin/dotnet
