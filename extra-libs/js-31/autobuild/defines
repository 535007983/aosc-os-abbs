PKGNAME=js-31
PKGSEC=libs
PKGDEP="nspr readline zlib"
PKGDES="JavaScript interpreter and libraries (version 31)"

AB_FLAGS_PIE=0
AUTOTOOLS_AFTER="--with-system-nspr \
                 --enable-threadsafe \
                 --enable-readline \
                 --enable-xterm-updates \
                 --enable-shared-js \
                 --enable-gcgenerational \
                 --enable-optimize \
                 --with-system-zlib \
                 --enable-system-ffi \
                 --without-system-icu \
                 --without-intl-api"
NOPARALLEL=yes

if [[ "${CROSS:-$ARCH}" = "armel" ]]; then
    AB_FLAGS_SPECS=0
fi
