PKGNAME=gnutls
PKGDES="Library that provides a secure layer over a reliable transport layer"
# FIXME: autogen provides the needed libopt, with local libopt gnutls fails to build
#        due to version mismatch.
PKGDEP="nettle readline libtasn1 readline p11-kit unbound"
[ "$ARCH" = "amd64" ] && PKGDEP+=" trousers"
BUILDDEP="autogen doxygen gperf texinfo"
PKGSEC=libs
AUTOTOOLS_AFTER="--with-zlib --disable-guile --without-idn \
                 --with-default-trust-store-pkcs11=pkcs11:model=p11-kit-trust;manufacturer=PKCS%2311%20Kit"
[ "$ARCH" = "amd64" ] && AUTOTOOLS_AFTER+=" --enable-tpm"
