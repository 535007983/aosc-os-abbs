PKGDEP="libtiff libpng sqlite ca-certs dbus fontconfig mesa \
        x11-lib alsa-lib xdg-utils hicolor-icon-theme libmng cups \
        icu gst-plugins-base-0-10"
BUILDDEP="postgresql sqlite unixodbc"

