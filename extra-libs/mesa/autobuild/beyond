abinfo "Making a symlink from libGLX_mesa to libGLX_indirect ..."
ln -sv /usr/lib/libGLX_mesa.so.0 "$PKGDIR"/usr/lib/libGLX_indirect.so.0

if [[ "${CROSS:-$ARCH}" = *64* ]]; then
    abinfo "Moving /usr/lib64 => /usr/lib ..."
    mv -v "$PKGDIR"/usr/lib64/* "$PKGDIR"/usr/lib/
    rm -rv "$PKGDIR"/usr/lib64
fi
