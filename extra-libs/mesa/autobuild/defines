PKGNAME=mesa
PKGDES="MesaLib - a OpenGL implentation"
PKGDEP="llvm-runtime x11-lib libdrm expat wayland systemd elfutils libvdpau libva s2tc nettle"
BUILDDEP="x11-proto mako systemd"
PKGSEC=x11

ABSHADOW=no
AUTOTOOLS_AFTER="--with-dri-driverdir=/usr/lib/xorg/modules/dri \
                 --with-egl-platforms=x11,drm,wayland \
                 --enable-llvm-shared-libs \
                 --enable-egl \
                 --enable-gbm \
                 --enable-gallium-llvm \
                 --enable-shared-glapi \
                 --enable-glx \
                 --enable-glx-tls \
                 --enable-dri \
                 --enable-dri3 \
                 --enable-osmesa \
                 --enable-gles1 \
                 --enable-gles2 \
                 --enable-texture-float \
                 --enable-vdpau \
                 --with-clang-libdir=/usr/lib"

if [[ "${CROSS:-$ARCH}" = "amd64" || "${CROSS:-$ARCH}" = mips* ]]; then
	AUTOTOOLS_AFTER+=" \
		--enable-nine \
		--enable-xa \
	        --with-gallium-drivers=r300,r600,radeonsi,nouveau,svga,swrast,virgl "
	if [[ "${CROSS:-$ARCH}" = "amd64" ]]; then
		AUTOTOOLS_AFTER+=" \
			--enable-opencl --enable-opencl-icd \
                        --with-dri-drivers=i915,i965,r200,radeon,nouveau,swrast "
		PKGDEP+=" libclc libcl"
	elif [[ "${CROSS:-$ARCH}" = mips* ]]; then
		AUTOTOOLS_AFTER+=" \
			--with-dri-drivers=r200,radeon,nouveau,swrast "
	fi
elif [[ "${CROSS:-$ARCH}" = arm* ]]; then
	AUTOTOOLS_AFTER+=" \
		--with-gallium-drivers=swrast,freedreno,vc4,nouveau,virgl \
		--with-dri-drivers=nouveau,swrast "
fi

RECONF=no
