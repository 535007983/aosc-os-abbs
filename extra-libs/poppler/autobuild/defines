PKGNAME=poppler
PKGSEC=libs
PKGDES="a PDF rendering library and command line tools used to manipulate PDF files"
PKGDEP="libjpeg-turbo cairo fontconfig openjpeg glib curl lcms2"

AUTOTOOLS_AFTER="--enable-xpdf-headers --enable-cairo-output --enable-libjpeg \
                 --enable-zlib --enable-poppler-glib \
                 --enable-gtk-doc --enable-libcurl"
# HACK: why not dep? dunno.
dpkg-query -s qt-4 &>/dev/null && AUTOTOOLS_AFTER+=" --enable-poppler-qt4" || AUTOTOOLS_AFTER+=" --disable-poppler-qt4"
dpkg-query -s qt-5 &>/dev/null && AUTOTOOLS_AFTER+=" --enable-poppler-qt5" || AUTOTOOLS_AFTER+=" --disable-poppler-qt5"
