make -C build DESTDIR=$PKGDIR install-libLTLIBRARIES
make -C build DESTDIR=$PKGDIR install-binSCRIPTS
make -C build DESTDIR=$PKGDIR install-includeHEADERS
make -C build DESTDIR=$PKGDIR install-hyphDATA

pushd abdist/usr/share/hyphen/
 en_US_aliases="en_AG en_AU en_BS en_BW en_BZ en_CA en_DK en_GB en_GH en_HK en_IE en_IN en_JM en_NA en_NZ en_PH en_SG en_TT en_ZA en_ZW"
 for lang in $en_US_aliases; do
      ln -s hyph_en_US.dic hyph_$lang.dic
 done
popd
  
install -dm755 abdist/usr/share/myspell/dicts
pushd abdist/usr/share/myspell/dicts
  for file in ../../hyphen/*; do
    ln -sv $i .
  done
popd

