mkdir -p $PKGDIR/opt/32/share
rm -rf $PKGDIR/opt/32/share/locale
ln -sfv /usr/share/locale $PKGDIR/opt/32/share/
rm -rf $PKGDIR/opt/32/share/info
rm -rf $PKGDIR/opt/32/share/i18n
ln -sfv /usr/share/i18n $PKGDIR/opt/32/share/
mkdir -p $PKGDIR/opt/32/lib

rm -rf $PKGDIR/32
rm -rf $PKGDIR/opt/32/lib/locale

rm -rf $PKGDIR/opt/32/{bin,sbin,var,etc,libexec}
