PKGNAME=doxygen
PKGSEC=doc
PKGDES="A documentation system for C/C++"
PKGDEP="gcc-runtime"
PKGRECOM="graphviz"
BUILDDEP="cmake flex ghostscript"
[ "$ARCH" = "amd64" ] && BUILDDEP+=" graphviz texlive"

CMAKE_AFTER="-DDOC_INSTALL_DIR:PATH=share/doc/doxygen \
             -Dbuild_doc:BOOL=OFF \
             -Dbuild_wizard:BOOL=OFF \
             -Dbuild_xmlparser=ON"
[ "$ARCH" = "amd64" ] && CMAKE_AFTER+=" -Dbuild_doc:BOOL=ON"
[ "$ARCH" = "amd64" ] && alias BUILD_FINAL='make docs'
