git clone git://git.blender.org/blender-addons.git blender-addons
git clone git://git.blender.org/blender-addons-contrib.git blender-addons-contrib
git clone git://git.blender.org/blender-translations.git blender-translations
git clone git://git.blender.org/scons.git scons

git submodule init
git config submodule."release/scripts/addons".url $SRCDIR/blender-addons
git config submodule."release/scripts/addons_contrib".url $SRCDIR/blender-addons-contrib
git config submodule."release/datafiles/locale".url $SRCDIR/blender-translations
git config submodule."scons".url $SRCDIR/scons
git submodule update
