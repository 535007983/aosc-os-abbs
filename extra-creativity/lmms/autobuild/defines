          wine 32subsystem chrpath"
PKGRECOM="wine fftw"

ABTYPE=cmake
CMAKE_AFTER="-DQT_QMAKE_EXECUTABLE=/usr/lib/qt4/bin/qmake \
             -DWINE_LIBRARY:FILEPATH=/usr/lib/wine64"
