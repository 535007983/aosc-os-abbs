mkdir l10n
cd l10n
for i in af ar ast be bg br bs ca ca@valencia cs cy da de el en_GB eo \
         es et eu fa fi fr fy ga gl he hi hne hr hu ia is it ja kk km \
         ko ku lt lv mal mk mr ms nb nds ne nl nn oc pa pl pt pt_BR \
         ro ru se sk sl sq sv ta tg th tr ug uk uz uz vi wa xh zh_CN zh_TW; do
    wget http://download.kde.org/unstable/krita/$PKGVER/krita-l10n/krita-l10n-"$i"-$PKGVER.tar.xz
    tar xf krita-l10n-"$i"-$PKGVER.tar.xz
    rm krita-l10n-"$i"-$PKGVER.tar.xz
done
cd "$SRCDIR"
