mkdir -p build
cd build
AR=ar ../configure --prefix=/opt/abcross/arm64 --target=aarch64-unknown-linux-gnu \
                   --with-sysroot=/var/ab/cross-root/arm64 --enable-shared --disable-multilib \
                   --enable-c99 --enable-long-long --enable-threads=posix \
                   --enable-languages=c,c++,fortran,lto --enable-__cxa_atexit --disable-altivec --disable-fixed-point --with-arch=armv8-a
make AS_FOR_TARGET=/opt/abcross/arm64/bin/aarch64-unknown-linux-gnu-as \
     LD_FOR_TARGET=/opt/abcross/arm64/bin/aarch64-unknown-linux-gnu-ld
make DESTDIR=$PKGDIR install
