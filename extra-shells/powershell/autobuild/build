mkdir -p "$PKGDIR"/usr/lib/pwsh
cp -r "$SRCDIR"/* "$PKGDIR"/usr/lib/pwsh
chown -R root:root "$PKGDIR"/usr/lib/pwsh

find "$PKGDIR"/usr/lib/pwsh -name "*.dll" -exec chmod 644 {} \;
find "$PKGDIR"/usr/lib/pwsh -name "*.so" -exec chmod 755 {} \;
chmod +x "$PKGDIR"/usr/lib/pwsh/pwsh
ln -sf "$PKGDIR"/usr/lib/pwsh/pwsh "$PKGDIR"/usr/bin/pwsh


