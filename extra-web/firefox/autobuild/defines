PKGNAME=firefox
PKGSEC=web
PKGDEP="gtk-2 startup-notification mime-types dbus-glib alsa-lib desktop-file-utils hicolor-icon-theme \
        libevent nss hunspell sqlite networkmanager gst-plugins-good-1-0 gst-libav-1-0 pulseaudio mozilla-common"
if [[ "${CROSS:-$ARCH}" = "amd64" ]]; then
    BUILDDEP+=" openjdk yasm"
fi
PKGDES="Standalone Web browser from Mozilla"

AB_FLAGS_PIE=0
PKGBREAK="firefox-i18n<=43.0.1"
PKGREP="firefox-i18n<=43.0.1"

if [[ "${CROSS:-$ARCH}" != "amd64" ]]; then
    NOPARALLEL=yes
else
    NOPARALLEL=no
    # Experimental LTO.
    NOLTO=no
fi
