PKGNAME=lynx
PKGSEC=web
PKGDEP="openssl libidn"
PKGDES="A text browser for the World Wide Web"

AUTOTOOLS_AFTER="--with-ssl=/usr \
                 --enable-nls \
                 --enable-ipv6 \
                 --with-screen=ncurses \
                 --with-curses-dir=/usr \
                 --with-pkg-config
                 --mandir=/usr/share/man"
ABSHADOW=no
PKGEPOCH=1
