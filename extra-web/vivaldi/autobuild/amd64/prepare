CR_VER=60.0.3112.91
CR_SRCTBL="https://commondatastorage.googleapis.com/chromium-browser-official/chromium-${CR_VER}.tar.xz"

wget -c "${CR_SRCTBL}"

mkdir -p ${PKGDIR}/ffmpeg-codecs

bsdtar xf vivaldi-stable-${PKGVER}-1.x86_64.rpm -C "${PKGDIR}"
bsdtar xf chromium-${CR_VER}.tar.xz -C "${PKGDIR}/ffmpeg-codecs"
