cd client_theming
mkdir -p build
cd build
cmake -D OEM_THEME_DIR=../nextcloudtheme ../client \
  -DCMAKE_INSTALL_PREFIX=/usr \
  -DCMAKE_INSTALL_LIBDIR=lib \
  -DCMAKE_BUILD_TYPE=Release \
  -DCMAKE_INSTALL_SYSCONFDIR=/etc/owncloud-client \
  -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
  -DQT_QMAKE_EXECUTABLE=/usr/lib/qt5/qmake
make
make doc-man
sed -Ei 's|Icon(\[.*\])?=nextcloud|Icon\1=Nextcloud|g' "build-linux/src/gui/nextcloud.desktop"
make DESTDIR=${PKGDIR}/ install
mkdir -p ${PKDIR}/etc/Nextcloud/
touch ${PKGDIR}/etc/Nextcloud/sync-exclude.lst
cd ..
