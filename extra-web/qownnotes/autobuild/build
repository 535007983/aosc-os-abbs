cd src/
git submodule update --init

echo "#define VERSION \"${PKGVER}\"" > version.h
echo "#define RELEASE \"AOSC\"" > release.h

/usr/lib/qt5/bin/qmake QOwnNotes.pro -r
make ${ABMK}
install -Dm755 QOwnNotes ${PKGDIR}/usr/bin/QOwnNotes
install -Dm644 QOwnNotes.desktop ${PKGDIR}/usr/share/applications/QOwnNotes.desktop
install -Dm644 images/icon.png ${PKGDIR}/usr/share/icons/hicolor/128x128/apps/QOwnNotes.png
install -Dm644 ../icons/icon.svg ${PKGDIR}/usr/share/pixmaps/QOwnNotes.svg
