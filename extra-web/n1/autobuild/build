# Binary Package
dpkg -x N1-${PKGVER}.deb "${PKGDIR}"
# delete the bash script and use soft link directly
rm -f "${PKGDIR}"/usr/bin/nylas
ln -s /usr/share/nylas/nylas "${PKGDIR}"/usr/bin/nylas


