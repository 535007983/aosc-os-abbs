Subject: [PATCH] Use Bold instead of DemiBold and use setStyleName()

---
 ui/style/style_core_font.cpp | 4 +++-
 1 file changed, 3 insertions(+), 1 deletion(-)

diff --git a/Telegram/lib_ui/ui/style/style_core_font.cpp b/Telegram/lib_ui/ui/style/style_core_font.cpp
index aacd7e2..eef62e3 100644
--- a/Telegram/lib_ui/ui/style/style_core_font.cpp
+++ b/Telegram/lib_ui/ui/style/style_core_font.cpp
@@ -285,8 +285,10 @@ FontData::FontData(int size, uint32 flags, int family, Font *other)

 #ifdef DESKTOP_APP_USE_PACKAGED_FONTS
        if (_flags & FontSemibold) {
-               f.setWeight(QFont::DemiBold);
+               f.setWeight(QFont::Bold);
+               f.setStyleName("Bold");
        }
+
 #endif // DESKTOP_APP_USE_PACKAGED_FONTS

        m = QFontMetrics(f);
