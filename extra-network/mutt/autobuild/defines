PKGNAME=mutt
PKGSEC=mail
PKGDEP="gpgme ncurses openssl cyrus-sasl gdbm libidn mime-types krb5"
PKGDES="Small but very powerful text-based mail client"

# FIXME: gpgme currently broken with 1.8
AUTOTOOLS_AFTER="--disable-gpgme --enable-pop --enable-imap \
                 --enable-smtp --enable-hcache \
                 --with-curses=/usr --with-regex --with-gss=/usr \
                 --with-ssl=/usr --with-sasl --with-idn"
ABSHADOW=no
