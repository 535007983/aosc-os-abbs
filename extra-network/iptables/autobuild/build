./configure --prefix=/usr                          \
            --exec-prefix=                         \
            --bindir=/usr/bin                      \
            --sbindir=/usr/bin                     \
            --with-xtlibdir=/usr/lib/iptables      \
            --with-pkgconfigdir=/usr/lib/pkgconfig \
            --enable-libipq                        \
            --enable-devel --enable-shared         \
            --libexecdir=/usr/lib/iptables         \
            --disable-static                       &&
make $ABMK &&
make DESTDIR=`pwd`/abdist install 
