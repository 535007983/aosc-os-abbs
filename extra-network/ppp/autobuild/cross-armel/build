CFLAGS="$CPPFLAGS $CFLAGS -D_GNU_SOURCE" LDFLAGS="$LDFLAGS" ./configure --host=$HOST --prefix=/usr

make $ABMK
make INSTROOT=`pwd`/abdist install
install -D -m755 scripts/pon  "abdist/usr/bin/pon"
install -D -m755 scripts/poff "abdist/usr/bin/poff"
install -D -m755 scripts/plog "abdist/usr/bin/plog"
install -D -m644 scripts/pon.1 "abdist/usr/share/man/man1/pon.1"
install -D -m600 etc.ppp/pap-secrets  "abdist/etc/ppp/pap-secrets"
install -D -m600 etc.ppp/chap-secrets "abdist/etc/ppp/chap-secrets"
install -d -m755 "abdist/etc/ppp/peers" 
chmod 0755 "abdist/usr/lib/pppd/2.4.6"/*.so
