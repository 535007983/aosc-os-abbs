pushd wpa_supplicant
make LIBDIR=/usr/lib BINDIR=/usr/bin $ABMK &&
make LIBDIR=/usr/lib BINDIR=/usr/bin DESTDIR=`pwd`/../abdist install &&

install -d -m755 `pwd`/../abdist/etc/wpa_supplicant
install -m644 wpa_supplicant.conf `pwd`/../abdist/etc/wpa_supplicant/wpa_supplicant.conf

install -d -m755 `pwd`/../abdist/usr/share/man/man{5,8}
install -m644 doc/docbook/*.5 `pwd`/../abdist/usr/share/man/man5/
install -m644 doc/docbook/*.8 `pwd`/../abdist/usr/share/man/man8/
rm -f `pwd`/../abdist/usr/share/man/man8/wpa_{priv,gui}.8

install -d -m755 `pwd`/../abdist/usr/share/dbus-1/system-services
install -m644 dbus/{fi.epitest.hostap.WPASupplicant.service,fi.w1.wpa_supplicant1.service} `pwd`/../abdist/usr/share/dbus-1/system-services/

install -d -m755 `pwd`/../abdist/etc/dbus-1/system.d
install -m644 dbus/dbus-wpa_supplicant.conf `pwd`/../abdist/etc/dbus-1/system.d/wpa_supplicant.conf

install -d -m755 `pwd`/../abdist/lib/systemd/system
install -m644 systemd/*.service `pwd`/../abdist/lib/systemd/system/
popd
