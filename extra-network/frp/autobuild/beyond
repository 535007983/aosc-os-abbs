abinfo "Installing configurations..."
install -Dm644 "$SRCDIR"/conf/frpc.ini "$PKGDIR"/etc/frp/frpc.ini
install -Dm644 "$SRCDIR"/conf/frps.ini "$PKGDIR"/etc/frp/frps.ini
install -Dm644 "$SRCDIR"/conf/frpc_full.ini "$PKGDIR"/etc/frp/frpc_full.ini
install -Dm644 "$SRCDIR"/conf/frps_full.ini "$PKGDIR"/etc/frp/frps_full.ini

abinfo "Installing systemd services..."
install -Dm644 "$SRCDIR"/conf/systemd/frpc.service  "$PKGDIR"/usr/lib/systemd/system/frpc.service
install -Dm644 "$SRCDIR"/conf/systemd/frps.service  "$PKGDIR"/usr/lib/systemd/system/frps.service
install -Dm644 "$SRCDIR"/conf/systemd/frpc@.service  "$PKGDIR"/usr/lib/systemd/system/frpc@.service
install -Dm644 "$SRCDIR"/conf/systemd/frps@.service  "$PKGDIR"/usr/lib/systemd/system/frps@.service
