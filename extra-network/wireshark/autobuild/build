install -v -m755 -d $PKGDIR/usr/share/pixmaps/wireshark

install -v -m644 -D wireshark.desktop \
                    $PKGDIR/usr/share/applications/wireshark.desktop

install -v -m644 -D image/wsicon48.png \
                    $PKGDIR/usr/share/pixmaps/wireshark.png

install -v -m644    image/*.{png,ico,xpm,bmp} \
                    $PKGDIR/usr/share/pixmaps/wireshark
