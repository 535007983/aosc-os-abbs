PKGNAME=wireshark
PKGDES="a network protocol analyzer, also known as a sniffer"
PKGSEC=net
PKGDEP="desktop-file-utils glib gnutls krb5 libcap libgcrypt libnl libpcap lua qt-5 sbc shared-mime-info xdg-utils"

ABSHADOW=no
AUTOTOOLS_AFTER="--with-qt=5 --with-gtk3=no --with-pcap \
                 --with-zlib --with-portaudio --with-ssl --with-krb5"
MAKE_AFTER="all"
ABTYPE=autotools
