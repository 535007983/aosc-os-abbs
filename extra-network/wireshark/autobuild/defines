PKGNAME=wireshark
PKGDES="a network protocol analyzer, also known as a sniffer"
PKGSEC=net
PKGDEP="glib libpcap gnutls libgcrypt lua krb5 openssl gtk-3 portaudio"

ABSHADOW=no
AUTOTOOLS_AFTER="--with-qt=no --with-gtk3=yes --with-pcap --with-zlib --with-portaudio --with-ssl --with-krb5"
MAKE_AFTER="all"
ABTYPE=autotools
