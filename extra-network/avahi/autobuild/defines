PKGNAME=avahi
PKGSEC=net
PKGDES="Service Discovery for Linux using mDNS/DNS-SD"
PKGDEP="dbus-python expat libcap libdaemon gtk-3 twisted"
BUILDDEP="gobject-introspection intltool xmltoman"

AUTOTOOLS_AFTER="--disable-mono \
                 --disable-monodoc \
                 --disable-qt3 \
                 --disable-qt4 \
                 --disable-gtk \
                 --enable-gtk3 \
                 --disable-pygtk \
                 --enable-compat-libdns_sd \
                 --enable-compat-howl \
                 --with-distro=archlinux \
                 --with-avahi-priv-access-group=network \
                 --with-autoipd-user=avahi \
                 --with-autoipd-group=avahi \
                 --with-systemdsystemunitdir=/usr/lib/systemd/syste"
