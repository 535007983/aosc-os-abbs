getent passwd smtpd >/dev/null || useradd -d / -u 91 -g 1 smtpd
getent passwd smtpq >/dev/null || useradd -d /var/spool/smtpd -u 92 -g 1 smtpq

chown -R root:root /var/spool/smtpd
chmod -R 711 /var/spool/smtpd

touch /var/spool/smtpd/offline
chmod 1777 /var/spool/smtpd/offline
chown smtpq /var/spool/smtpd/purge
chmod 700 /var/spool/smtpd/purge
chown smtpq /var/spool/smtpd/queue
chmod 700 /var/spool/smtpd/queue
chown smtpq /var/spool/smtpd/corrupt
chmod 700 /var/spool/smtpd/corrupt
