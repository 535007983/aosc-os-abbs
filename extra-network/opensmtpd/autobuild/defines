PKGNAME=opensmtpd
PKGSEC=mail
PKGDEP="libasr libevent openssl linux-pam"
PKGDES="free implementation of the server-side SMTP protocol"

AUTOTOOLS_AFTER="--with-maildir=/var/spool/mail \
                 --with-privsep-path=/var/empty \
                 --with-sock-dir=/run --with-ca-file=/etc/ssl/ca-bundle.crt \
                 --with-privsep-user=smtpd --with-queue-user=smtpq --with-pam"
ABSHADOW=no
PKGCONFL="postfix exim"
PKGPROV="mta mail-transport-agent"
