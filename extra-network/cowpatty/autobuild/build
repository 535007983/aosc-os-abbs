pkgdir=`pwd`/abdist
sed -r 's|(= -pipe)|+\1|g' -i Makefile
sed 's|-g3 -ggdb||g' -i Makefile
make all strip
make DESTDIR="${pkgdir}" BINDIR="/usr/bin" install
install -Dm 644 dict "${pkgdir}/usr/share/cowpatty/dict"
install -Dm 644 COPYING "${pkgdir}/usr/share/licenses/cowpatty/LICENSE"
install -Dm 644 README "${pkgdir}/usr/share/doc/cowpatty/README"
