#!/bin/bash
arch_inurl=''
if [ "$ARCH"x = 'i386'x ]
then
  arch_inurl=386
elif [ "$ARCH"x = 'armel'x ]
then
  arch_inurl=arm
else
  arch_inurl="${ARCH}"
fi
filename=${PKGNAME}-linux-${arch_inurl}-v${PKGVER}.tar.gz
wget https://github.com/syncthing/syncthing/releases/download/v${PKGVER}/${filename}
tar xvzf ${filename}
cd ${filename%.tar.gz}
install -Dm755 ${PKGNAME} "${PKGDIR}/usr/bin/${PKGNAME}"
install -Dm644 "etc/linux-systemd/system/${PKGNAME}@.service" "${PKGDIR}/usr/lib/systemd/system/${PKGNAME}@.service"
install -Dm644 "etc/linux-systemd/user/${PKGNAME}.service" "${PKGDIR}/usr/lib/systemd/user/${PKGNAME}.service"
install -Dm644 README.txt "${PKGDIR}/usr/share/doc/${PKGNAME}/README"
