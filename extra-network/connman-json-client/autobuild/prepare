abinfo "Appending -O2, -Wno-error=maybe-uninitialized, -Wno-error=deprecated-declarations to CPPFLAGS ..."
export CPPFLAGS="${CPPFLAGS} -O2 -Wno-error=maybe-uninitialized -Wno-error=deprecated-declarations"

abinfo "Appending -Wno-error=maybe-uninitialized, -Wno-error=deprecated-declarations to CFLAGS ..."
export CFLAGS="${CFLAGS} -Wno-error=maybe-uninitialized -Wno-error=deprecated-declarations"

abinfo 'Creating $PKGDIR ...'
mkdir -pv "$PKGDIR"
