PKGNAME=gdm
PKGDES="GNOME Display Manager"
PKGSEC=gnome
PKGDEP="accountsservice dconf libcanberra linux-pam nss upower gnome-session wayland"
AUTOTOOLS_AFTER="--libexecdir=/usr/lib/gdm \
                 --disable-schemas-compile \
                 --without-tcp-wrappers \
                 --without-console-kit \
                 --without-plymouth \
                 --with-systemd \
                 --with-default-pam-config=aosc \
                 --with-at-spi-registryd-directory=/usr/libexec \
                 --with-authentication-agent-directory=/usr/lib/polkit-gnome \
                 --with-check-accelerated-directory=/usr/lib/gnome-session \
                 --with-gnome-settings-daemon-directory=/usr/lib/gnome-settings-daemon"

AB_FLAGS_PIE=0
