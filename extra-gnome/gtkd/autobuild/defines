PKGNAME=gtkd
PKGSEC=gnome
PKGDEP="gtk-3 liblphobos gstreamer-1-0 gtksourceview-3 vte-gtk3"
BUILDDEP="ldc"
PKGDES="D language bindings for GTK+"

ABMK="gtkd"
ABMK="all"
MAKE_AFTER="DC=ldmd2 prefix=/usr"
ABTYPE=plainmake
NOSTATIC=no
NOLTO=yes

if [[ "${CROSS:-$ARCH}" = *64 ]]; then
    MAKE_AFTER+=" MODEL=64"
fi
