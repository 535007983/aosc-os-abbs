PKGNAME=gnome-user-share
PKGEPOCH=1
PKGSEC=gnome
PKGDEP="dconf gtk-3 hicolor-icon-theme libnotify gnome-bluetooth libcanberra"
[ "$ARCH" = "amd64" ] && PKGDEP+=" mod-dnssd"
BUILDDEP="gtk-doc docbook-xsl intltool itstool nautilus"
PKGDES="Easy-to-use user-level file sharing for GNOME"

AUTOTOOLS_AFTER="--enable-bluetooth --enable-gtk-doc"
ABRPMAUTOPROVONLY=yes
