PKGNAME=mutter
PKGSEC=gnome
PKGDEP="clutter dconf gobject-introspection gsettings-desktop-schemas libcanberra \
        startup-notification zenity gnome-desktop upower"
BUILDDEP="gobject-introspection gtk-doc intltool"
PKGDES="Window manager for GNOME"

AUTOTOOLS_AFTER="--enable-gtk-doc --disable-werror --enable-compile-warnings=no --enable-gles1 --enable-gles2"
[[ "${CROSS:-$ARCH}" == arm* ]] && AUTOTOOLS_AFTER+=" --with-default-driver=gles2"
