PKGNAME=w3m
PKGEPOCH=1
PKGSEC=web
PKGDEP="openssl gc ncurses"
# For image support
PKGRECOM="imlib2"
BUILDDEP="imlib2"
PKGDES="a text-based web browser"

ABRPMAUTOPROVONLY=yes
AUTOTOOLS_AFTER="--libexecdir=/usr/lib \
                 --enable-image=x11,fb \
                 --with-imagelib=imlib2 \
                 --with-termlib=ncurses \
                 --disable-w3mmailer"
