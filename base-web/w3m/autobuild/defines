PKGNAME=w3m
PKGSEC=web
PKGDEP="openssl gc ncurses imlib2"
PKGDES="A text-based Web browser and pager"

ABRPMAUTOPROVONLY=yes
AUTOTOOLS_AFTER="--libexecdir=/usr/lib \
                 --enable-image=x11,fb \
                 --with-imagelib=imlib2 \
                 --with-termlib=ncurses \
                 --disable-w3mmailer"
PKGEPOCH=2
