PKGNAME=wget
PKGDES="A network utility to retrieve files from the Internet"
PKGSEC=web

PKGDEP="openssl glibc libidn2 util-linux"
PKGDEP__RETRO="openssl glibc util-linux"
PKGDEP__I486="$PKGDEP__RETRO"

AUTOTOOLS_AFTER="--with-ssl=openssl --enable-nls \
                 --disable-rpath --without-libpcre2 \
                 PYTHON=/usr/bin/python3"
AUTOTOOLS_AFTER__RETRO=" \
                 --with-ssl=openssl --enable-nls \
                 --disable-rpath --without-libpcre2 \
                 --without-libidn2 --without-libidn"
AUTOTOOLS_AFTER__I486="$AUTOTOOLS__RETRO"

RECONF=0
