for i in ar fa kk ro bg fi km ru bs fr ko sk ca ga lt sl ca@valencia gl lv sr \
         cs he mr sv da hi nb tr de hr nds ug el hu nl uk en_GB ia nn wa eo \
         id pa zh_CN es is pl zh_TW et it pt eu ja pt_BR; do
    cd kde-l10n-${i}-$PKGVER
    cmake . -DCMAKE_INSTALL_PREFIX=/usr
    make
    make install DESTDIR=$PKGDIR
    cd ..
done

# Conflict with Digikam

for i in `find $PKGDIR -name 'libkipi.mo'`; do
    rm -fv $i
done
