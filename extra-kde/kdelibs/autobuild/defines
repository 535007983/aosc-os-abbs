ABTYPE=cmake

PKGNAME=kdelibs
PKGSEC=kde
PKGDES="programs and libraries that are central to development and execution of KDE programs"
PKGDEP="strigi attica krb5 qca libdbusmenu-qt polkit-qt-1 shared-mime-info enchant giflib jasper openexr docbook-xsl upower udisks-2 phonon qt-4 media-player-info grantlee herqq gamin"
BUILDDEP="automoc4"
CMAKE_AFTER="-DCMAKE_INSTALL_PREFIX=/usr \
             -DSYSCONF_INSTALL_DIR=/etc \
             -DCMAKE_BUILD_TYPE=Release \
             -DKDE4_BUILD_TESTS=OFF \
             -DCMAKE_SKIP_RPATH=ON \
             -DKDE_DISTRIBUTION_TEXT=AOSC \
             -DLOCALE_INSTALL_DIR=/usr/share/locale/kde4 \
             -DDOCBOOKXML_CURRENTDTD_DIR=/usr/share/xml/docbook/xml-dtd-4.5 \
             -DKDE_DEFAULT_HOME=.kde4 \
             -DWITH_FAM=ON \
             -DWITH_SOLID_UDISKS2=ON"
USECLANG=yes
