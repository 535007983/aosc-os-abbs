AUXVER=5.0.0-rc3 # workaround too new main program

cd "$SRCDIR"/kicad-i18n-$AUXVER
mkdir build; cd build
cmake .. ${CMAKE_DEF} \
         -DKICAD_I18N_UNIX_STRICT_PATH=ON
make
make install DESTDIR="$PKGDIR"

cd "$SRCDIR"/kicad-doc-$AUXVER
cp -r share "$PKGDIR"/usr/

for i in symbols footprints packages3D
do
	cd "$SRCDIR"/kicad-$i-$AUXVER
	mkdir build; cd build
	cmake .. ${CMAKE_DEF}
	make -j1
	make install DESTDIR="$PKGDIR" -j1
done

cd "$SRCDIR"
