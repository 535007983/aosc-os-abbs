cd "$SRCDIR"/kicad-i18n-$PKGVER
mkdir build; cd build
cmake .. ${CMAKE_DEF} \
         -DKICAD_I18N_UNIX_STRICT_PATH=ON
make
make install DESTDIR="$PKGDIR"

cd "$SRCDIR"/kicad-doc-$PKGVER
cp -r share "$PKGDIR"/usr/

cd "$SRCDIR"/kicad-library-$PKGVER
cmake .. ${CMAKE_DEF}
make -j1
make install DESTDIR="$PKGDIR" -j1

cd "$SRCDIR"/kicad-footprints-$PKGVER
mkdir -p "$PKGDIR"/usr/share/kicad/modules
cp -r * "$PKGDIR"/usr/share/kicad/modules/

cd "$SRCDIR"

ln -sv "$PKGDIR"/usr/share/kicad/template/fp-lib-table{.for-pretty,}
