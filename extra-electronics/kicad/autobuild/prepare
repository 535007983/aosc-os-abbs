wget https://github.com/KiCad/kicad-i18n/archive/$PKGVER.tar.gz

wget http://downloads.kicad-pcb.org/libraries/kicad-library-$PKGVER.tar.gz \
     http://downloads.kicad-pcb.org/libraries/kicad-footprints-$PKGVER.tar.gz \
     http://downloads.kicad-pcb.org/docs/kicad-doc-$PKGVER.tar.gz

for i in *.tar.gz; do
    tar xf $i
done

ln -sv /usr/bin/ld.bfd "$SRCDIR"/ld
export PATH="$SRCDIR:$PATH"

bzr whoami "AOSC Packager <yeahboi@aosc.io>"

rm "$SRCDIR"/CMakeModules/CheckCXXSymbolExists.cmake
