./configure --prefix=/opt/abiword-lite --without-evolution-data-server --enable-introspection --with-libical=no --with-champlain=no --with-redland=no &&
make $ABMK &&
make DESTDIR=$PKGDIR install
mkdir -p $PKGDIR/usr/share/applications
sed 's@Exec=abiword@Exec=/opt/abiword-lite/bin/abiword@g' < $PKGDIR/opt/abiword-lite/share/applications/abiword.desktop > $PKGDIR/usr/share/applications/abiword-lite.desktop
sed -i 's@Name=AbiWord@Name=AbiWord Lite@g' $PKGDIR/usr/share/applications/abiword-lite.desktop
