mkdir ext_sources_down

pushd ext_sources_down
  for i in `cat ../autobuild/list`; do
      # DO NOT USE axel
      wget -c $i
  done
popd

patch -Np1 -i autobuild/patches/make-pyuno-work-with-system-wide-module-install.diff

sed -i "s:qmake:\/usr\/lib\/qt4\/bin\/qmake:g" configure.ac

sed -i "s:\[mdds >= 0.12.0\]:\[mdds-1.0 >= 1.0.0\]:" configure.ac

mv writerperfect/qa/unit/data/impress/libetonyek/{fail,pass}/v6.zip
