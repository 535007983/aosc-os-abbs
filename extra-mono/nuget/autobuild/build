xbuild /p:Configuration=Release xdt/XmlTransform/Microsoft.Web.XmlTransform.csproj
xbuild Build/Build.proj /p:Configuration=Release /p:TreatWarningsAsErrors=false \
                        /tv:4.0 /p:TargetFrameworkVersion=v4.5 \
                        /p:Configuration="Mono Release" /t:BuildMono

install -d "$PKGDIR"/usr/lib/nuget
install -m 0644 src/CommandLine/obj/Mono\ Release/NuGet.exe "$PKGDIR"/usr/lib/nuget/
install -m 0644 src/Core/obj/Mono\ Release/NuGet.Core.dll "$PKGDIR"/usr/lib/nuget/
install -m 0644 xdt/XmlTransform/obj/Release/Microsoft.Web.XmlTransform.dll "$PKGDIR"/usr/lib/nuget/
