PKGNAME=openjdk
PKGSEC=java
PKGDEP="ca-certs nss xdg-utils hicolor-icon-theme alsa-lib gtk-2 cups fontconfig unzip zip cpio"
# For IcedTea-Web, amd64 only.
if [[ "${CROSS:-$ARCH}" = "amd64" ]]; then
    BUILDDEP+=" npapi-sdk chromium epiphany firefox google-chrome midori opera"
else
    # Non-JIT builds would need libffi.
    BUILDDEP+=" libffi"
fi
PKGDES="OpenJDK Java 8 JRE + JDK + IcedTea... All in one"

PKGPROV="icedtea icedtea-web jre-openjdk jre8-openjdk openjdk8"
NOPARALLEL=yes
PKGEPOCH=1

FAIL_ARCH="!(amd64|armel|arm64|mipsel)"
