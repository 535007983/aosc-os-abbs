PKGNAME=mate-user-share
PKGSEC=x11
PKGDEP="dbus-glib dconf libunique"
[ "$ARCH" = "amd64" ] && PKGDEP+=" mod-dnssd"
BUILDDEP="mate-common"
[ "$ARCH" = "amd64" ] && BUILDDEP+=" httpd"
PKGDES="user level sharing via WebDAV for MATE"

AUTOTOOLS_AFTER="--disable-scrollkeeper --disable-bluetooth \
                 --with-gtk=2.0"
[ "$ARCH" = "amd64" ] && \
AUTOTOOLS_AFTER+=" --with-modules-path=/usr/lib/httpd/modules --with-httpd=httpd" || \
AUTOTOOLS_AFTER+=" --without-httpd"
