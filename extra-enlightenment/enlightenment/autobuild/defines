PKGNAME=enlightenment
PKGSEC=x11
PKGDEP="acpid bluez connman desktop-file-utils elementary geoip-database hicolor-icon-theme \
        mesa udisks-2 xcb-util-keysyms"
PKGDES="Enlightenment desktop environment, shell and window manager"

AUTOTOOLS_AFTER="--enable-xwayland --enable-wayland \
                 --disable-wl-weekeyboard --enable-mount-eeze \
                 --enable-wayland-clients \
                 --enable-wl-desktop-shell \
                 --enable-wl-drm \
                 --enable-wl-x11 \
                 --disable-rpath \
                 --enable-pam \
                 --enable-contact \
                 --with-profile=FAST_PC \
                 --with-systemdunitdir=/usr/lib/systemd/system"
NOPARALLEL=yes
ABSHADOW=no
