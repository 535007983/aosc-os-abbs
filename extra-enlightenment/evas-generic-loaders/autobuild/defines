PKGNAME=evas-generic-loaders
PKGSEC=x11
PKGDEP="efl libraw librsvg libspectre poppler"
PKGDES="additional loaders for Evas"

AUTOTOOLS_AFTER="--libexecdir=/usr/lib/evas \
                 --enable-poppler \
                 --enable-spectre \
                 --enable-libraw \
                 --enable-svg \
                 --enable-gstreamer"
