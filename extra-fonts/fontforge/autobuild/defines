PKGNAME=fontforge
PKGSEC=fonts
PKGDEP="libtool pango giflib libtiff libspiro libxml2 libunicodenames \
        czmq python-2 desktop-file-utils gtk-3 hicolor-icon-theme \
        libuninameslist potrace"
BUILDDEP="cmake sphinx"
PKGDES="Outline and bitmap font editor"

CMAKE_AFTER="-DCMAKE_BUILD_TYPE=Release \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DENABLE_MAINTAINER_TOOLS=TRUE \
	-DENABLE_FONTFORGE_EXTRAS=TRUE \
	-DUNIX=TRUE"
