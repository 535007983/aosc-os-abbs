scons all \
	${MAKEFLAGS/ /} \
	--use-system-tcmalloc \
	--use-system-pcre \
	--use-system-boost \
	--use-system-snappy \
	--use-system-valgrind \
	--use-system-zlib \
	--use-system-yaml \
	--ssl \
	--disable-warnings-as-errors \
	--wiredtiger=on \
	--experimental-decimal-support=off \
	CCFLAGS="${CPPFLAGS} ${CFLAGS}" LINKFLAGS="${LDFLAGS}"

scons install \
	${MAKEFLAGS/ /} \
	--use-system-tcmalloc \
	--use-system-pcre \
	--use-system-boost \
	--use-system-snappy \
	--use-system-valgrind \
	--use-system-zlib \
	--use-system-yaml \
	--ssl \
	--disable-warnings-as-errors \
	--wiredtiger=on \
	--experimental-decimal-support=off \
	--prefix=$PKGDIR/usr \
	CCFLAGS="${CPPFLAGS} ${CFLAGS}" LINKFLAGS="${LDFLAGS}"

install -dm700 "$PKGDIR"/var/lib/mongodb
install -dm755 "$PKGDIR"/var/log/mongodb
