make

install -dm755 \
    "$PKGDIR"/usr/{include/leveldb,lib,share/doc} \ 

mkdir -p "$PKGDIR"/usr/share/doc/leveldb

install -m644 -t "$PKGDIR"/usr/lib libleveldb.so.* libleveldb.a
cp -P libleveldb.so* "$PKGDIR"/usr/lib

install -m644 -t "$PKGDIR"/usr/include/leveldb include/leveldb/*

cp -r doc/* "$PKGDIR"/usr/share/doc/leveldb/
