make hunspell &&

install -dm755 abdist/usr/share/hunspell
install -m644 he.dic abdist/usr/share/hunspell/he_IL.dic
install -m644 he.aff abdist/usr/share/hunspell/he_IL.aff

install -dm755 abdist/usr/share/myspell/dicts
pushd abdist/usr/share/myspell/dicts
  for file in abdist/usr/share/hunspell/*; do
    ln -sv /usr/share/hunspell/$(basename $file) .
  done
popd
