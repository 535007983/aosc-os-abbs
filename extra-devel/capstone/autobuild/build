pkgdir=`pwd`/abdist
echo "[+] Making capstone base files..."
make DESTDIR="${pkgdir}" install
install -Dm 644 LICENSE.TXT "${pkgdir}/usr/share/licenses/capstone/LICENSE"
echo "[+] Making capstone python3 files..."
cd bindings/python
python3 setup.py install -O1 --root="`pwd`/../../abdist" --prefix=/usr
echo "[+] Making capstone python2 files..."
python2 setup.py install -O1 --root="`pwd`/../../abdist" --prefix=/usr
install -Dm 644 LICENSE.TXT "`pwd`/abdist/usr/share/licenses/capstone/LICENSE"