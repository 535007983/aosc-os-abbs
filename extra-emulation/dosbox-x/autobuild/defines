PKGNAME=dosbox-x
PKGSEC=virtual
PKGDEP="sdl-net+32 zlib+32 sdl-sound+32 mesa+32 libpng+32 libpcap+32 \
        alsa-lib+32 glu+32 fluidsynth+32"
PKGDES="DOSBox-X fork of the DOSBox DOS emulator project"

AUTOTOOLS_AFTER="--sysconfdir=/etc/dosbox --enable-core-inline \
                 --enable-opengl --enable-dynamic-core"
ABSHADOW=no
FAIL_ARCH="!(amd64)"
