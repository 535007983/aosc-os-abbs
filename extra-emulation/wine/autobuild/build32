mkdir wine32
pushd wine32

../configure \
    --prefix=/opt/32 \
    --with-x \
    --with-xattr \
    --with-dbus \
    --without-dbus \
    --with-gstreamer \
    --with-d3dadapter \
    --libdir=/usr/lib/wine32 \
    --with-wine64=`pwd`/../wine64 \
    --with-va \
    --with-gtk3 \
    --with-pulse \
    PKG_CONFIG_PATH="/opt/32/lib/pkgconfig"
make
make prefix="$PKGDIR/usr" \
     libdir="$PKGDIR/usr/lib/wine32" \
     dlldir="$PKGDIR/usr/lib/wine32/wine" install

popd
