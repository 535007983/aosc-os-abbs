sed 's|OpenCL/opencl.h|CL/opencl.h|g' -i configure*


git clone https://github.com/wine-staging/wine-staging.git

pushd wine-staging
git checkout v"$PKGVER"

wget https://github.com/wine-staging/wine-staging/commit/35f28c4538525599eee80c8d2fb1cb74c1f23adb.patch
patch -Np1 -i ./35f28c4538525599eee80c8d2fb1cb74c1f23adb.patch

cd patches
ln -s ../.. wine
./patchinstall.sh DESTDIR=../../ --all
popd
