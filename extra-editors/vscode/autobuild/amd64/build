# Bootstrap npm 2.x
./scripts/npm.sh install 'npm@2'
export PATH="$SRCDIR/node_modules/.bin:$PATH"

# Build again
./scripts/npm.sh install
gulp vscode-linux-x64

mkdir -p $PKGDIR/usr/lib/vscode
cp -r $SRCDIR/../VSCode-linux-x64/* $PKGDIR/usr/lib/vscode

# FIXME: Why this binary name... renamed for RPM compatibility.
mv $PKGDIR/usr/lib/vscode/'Code - OSS' $PKGDIR/usr/lib/vscode/Code

mkdir -p $PKGDIR/usr/bin
ln -sv /usr/lib/vscode/Code $PKGDIR/usr/bin/vscode
