# Bootstrap npm 2.x
./scripts/npm.sh install 'npm@2'
export PATH="$SRCDIR/node_modules/.bin:$PATH"

# Build again
./scripts/npm.sh install
gulp vscode-linux-x64

mkdir -p $PKGDIR/usr/lib/vscode
cp -r $SRCDIR/../VSCode-linux-x64/* $PKGDIR/usr/lib/vscode

mkdir -p $PKGDIR/usr/bin
ln -sv /usr/lib/vscode/code-oss $PKGDIR/usr/bin/vscode
