script/build --build-dir $SRCDIR/atom-build
script/grunt install --build-dir $SRCDIR/atom-build \
                     --install-dir $PKGDIR/usr

install -Dm644 resources/linux/Atom.desktop \
               $PKGDIR/usr/share/applications/atom.desktop
install -Dm644 resources/app-icons/stable/png/1024.png \
               $PKGDIR/usr/share/pixmaps/atom.png
