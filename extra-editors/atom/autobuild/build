script/build --verbose --build-dir $SRCDIR/atom-build
script/grunt install --build-dir $SRCDIR/atom-build \
                     --install-dir $PKGDIR/usr

rm $PKGDIR/usr/share/atom/resources/app/apm/bin/node
cd $PKGDIR/usr/share/atom/resources/app/apm/bin
ln -sv /usr/bin/node node

cd $SRCDIR
sed -e "s/=.*atom/=atom/g" \
    -e "s/atom.png/atom/g" \
    -i $PKGDIR/usr/share/applications/atom.desktop

for i in 1024 512 256 128 64 48 32 24 16;do
    mkdir -p $PKGDIR/usr/share/icons/hicolor/${i}x${i}/apps
    cp $SRCDIR/atom-build/icons/${i}.png $PKGDIR/usr/share/icons/hicolor/${i}x${i}/apps/atom.png
done
