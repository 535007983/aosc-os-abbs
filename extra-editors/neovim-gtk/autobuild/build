cargo build --release

install -Dm755 target/release/nvim-gtk "$PKGDIR"/usr/bin/nvim-gtk
install -Dm644 desktop/org.daa.NeovimGtk.desktop \
    "$PKGDIR"/usr/share/applications/org.daa.NeovimGtk.desktop
install -Dm644 desktop/org.daa.NeovimGtk.png \
   "$PKGDIR"/usr/share/pixmaps/org.daa.NeovimGtk.png
