./configure \
    --prefix=/usr \
    --with-intl=full-icu \
    --download=all \
    --shared-openssl \
    --shared-zlib \
    --without-npm
make
make DESTDIR=$PKGDIR install

install -d $PKGDIR/usr/share/doc/nodejs
cp -r doc/{*.html,assets} \
   $PKGDIR/usr/share/doc/nodejs/

# Use the newest npm

wget https://github.com/npm/npm/archive/v3.5.4.tar.gz
tar xf v3.5.4.tar.gz
cd npm-3.5.4

make
make NPMOPTS="--prefix=\"$PKGDIR/usr\"" install

chmod -R u=rwX,go=rX $PKGDIR
chown -R root $PKGDIR/usr/lib/node_modules

for _dir in man1 man5 man7; do
    rm -f $PKGDIR/usr/share/man/$_dir/*
    cd $PKGDIR/usr/lib/node_modules/npm/man/$_dir
    for _file in *; do
        ln -s /usr/lib/node_modules/npm/man/$_dir/$_file $PKGDIR/usr/share/man/$_dir/
    done
done
  
cp $PKGDIR/usr/lib/node_modules/npm/bin/node-gyp-bin/node-gyp \
   $PKGDIR/usr/bin/node-gyp
sed -e 's|"`dirname "$0"`/../../|"`dirname "$0"`/../lib/node_modules/npm/|' \
    -i $PKGDIR/usr/bin/node-gyp
  
cd $SRCDIR
