    VER=1.12
    CHKSUM="sha256::09c43d3336743866f2985f566db0520b36f4992aea2b4b2fd9f52f17049e88f2"
else
    VER=1.8.7
    CHKSUM="sha256::5911e751807eebbc1980dad4305ef5492b96d6cd720bf93cbcefa86e1c195f9e"
fi
SRCTBL="https://storage.googleapis.com/golang/go${VER}.src.tar.gz"
