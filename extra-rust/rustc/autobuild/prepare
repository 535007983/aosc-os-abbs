cat << EOF > "$SRCDIR"/config.toml
[build]
extended = true
verbose = 2
EOF

if [[ "${CROSS:-$ARCH}" = "i586" ]]; then
    printf 'target = ["i586-unknown-linux-gnu"]\n\n' >> "$SRCDIR"/config.toml
fi

cat << EOF >> "$SRCDIR"/config.toml
[install]
prefix = "/usr"

[rust]
codegen-units = 0
debuginfo-level = if debug { 2 } else { 0 }
channel = "stable"
EOF
