# General patches from... places.

for i in autobuild/patches/*.patch; do
    patch -Np1 -i $i
done

# loongson64 (on mipsel) extra patches.

if [[ "${CROSS:-$ARCH}" = "mipsel" ]]; then
    for i in autobuild/patches/*.patch.mipsel; do
        patch -Np1 -i $i
    done
fi

# loongson64 (on both mipsel and mips64el) extra patches.

if [[ "${CROSS:-$ARCH}" = mips* ]]; then
    for i in autobuild/patches/*.patch.loongson64; do
        patch -Np1 -i $i
    done
fi
