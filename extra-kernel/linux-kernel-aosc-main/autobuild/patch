for i in autobuild/patches/*; do
    patch -Np1 -i $i
done

git clone -b aufs${VER%.*} --depth 1 https://github.com/sfjro/aufs${VER%%.*}-standalone
rm aufs${VER%%.*}-standalone/include/uapi/linux/Kbuild
cp -r aufs${VER%%.*}-standalone/{Documentation,fs,include} .

for i in aufs${VER%%.*}-standalone/*.patch; do
    patch -Np1 -i $i
done
