rm -fr $PKGDIR/usr/lib/dracut/modules.d/01fips
rm -fr $PKGDIR/usr/lib/dracut/modules.d/02fips-aesni
rm -fr $PKGDIR/usr/lib/dracut/modules.d/02caps
