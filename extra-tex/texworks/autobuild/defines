PKGNAME=texworks
PKGSEC=tex
PKGDEP="poppler hunspell desktop-file-utils texlive lua python-2"
BUILDDEP="cmake"
PKGDES="a Qt based editor endorsed by the TUG"

CMAKE_AFTER="-DTW_BUILD_ID=AOSC \
             -DWITH_LUA=ON \
             -DWITH_PYTHON=ON \
             -DCMAKE_INSTALL_PREFIX=/usr \
             -DQT_QMAKE_EXECUTABLE=/usr/lib/qt4/bin/qmake"
