make -C UnixBench/
install -dm775 $PKGDIR/usr/bin/unixbench
cp -a $SRCDIR/UnixBench/{pgms,results,testdir,tmp,Run} $PKGDIR/usr/bin/unixbench

echo "#!/bin/sh" > $PKGDIR/usr/bin/ubench
echo "cd /usr/bin/unixbench/" >> $PKGDIR/usr/bin/ubench
echo "./Run \$@ 2>/dev/null" >> $PKGDIR/usr/bin/ubench

echo "check:" >> $PKGDIR/usr/bin/unixbench/Makefile

chmod 775 $PKGDIR/usr/bin/ubench
chmod 775 $PKGDIR/usr/bin/unixbench/Run
chmod ugoa+w $PKGDIR/usr/bin/unixbench/{results,testdir,tmp}
