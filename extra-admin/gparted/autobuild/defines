PKGNAME=gparted
PKGSEC=utils
PKGDEP="dosfstools jfsutils f2fs-tools btrfs-progs exfat-utils ntfs-3g reiserfsprogs xfsprogs polkit gpart mtools gtkmm parted"
BUILDDEP="intltool gnome-doc-utils"
PKGDES="a Partition Magic clone, frontend to GNU Parted"

