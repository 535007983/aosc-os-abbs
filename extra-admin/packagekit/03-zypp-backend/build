./configure --prefix=/usr --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-schemas-compile --enable-gtk-doc \
            --enable-python3 --enable-systemd \
            --enable-gstreamer-plugin --disable-aptcc --enable-zypp \
            --enable-shared --disable-static \
            PYTHON=/usr/bin/python3
make
make install DESTDIR=$SRCDIR/fakeinstall

mkdir -p $PKGDIR/usr/lib/packagekit-backend/
mv $SRCDIR/fakeinstall/usr/lib/packagekit-backend/libpk_backend_zypp.la $PKGDIR/usr/lib/packagekit-backend/
mv $SRCDIR/fakeinstall/usr/lib/packagekit-backend/libpk_backend_zypp.so $PKGDIR/usr/lib/packagekit-backend/
