systemd-sysusers ceph.conf
systemd-tmpfiles --create ceph.conf

chown -R root:ceph /etc/ceph
chown -R ceph:ceph /var/log/ceph
chown -R ceph:ceph /var/lib/ceph
chown -R ceph:ceph /var/lib/ceph/bootstrap-mds
chown -R ceph:ceph /var/lib/ceph/bootstrap-osd
chown -R ceph:ceph /var/lib/ceph/bootstrap-rgw
chown -R ceph:ceph /var/lib/ceph/mon
chown -R ceph:ceph /var/lib/ceph/mgr
chown -R ceph:ceph /var/lib/ceph/osd
